{
    "name": "react-saas-template",
    "version": "1.0.0",
    "private": true,
    "homepage": "",
    "description": "Template for building an SaaS/admin application using React + Material-UI",
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/icons": "^4.11.2",
        "@types/jest": "^28.1.8",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^5.0.1",
        "react-toastify": "^7.0.4",
        "sass": "^1.54.5",
        "typescript": "^4.7.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^5.36.2",
        "@typescript-eslint/parser": "^5.36.2",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.31.8",
        "prettier": "^2.7.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint-html": "htmlhint src/* -c htmlhint.conf --warn",
        "fmt": "prettier --list-different \"src/**/*.*\" ",
        "lint": "npx eslint src/app --rulesdir config/eslint_rules",
        "lint:fix": "npx eslint",
        "format": "prettier --write src/app",
        "watch": "ng build --watch --configuration development"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 80,
        "endOfLine": "lf"
    }
}
